#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    char *start, *end, temp;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);  // Read input (including spaces)

    // Remove newline character (if any)
    str[strcspn(str, "\n")] = '\0';

    start = str;                    // Point to beginning of string
    end = str + strlen(str) - 1;    // Point to last character

    // Swap characters from start and end until they meet
    while (start < end) {
        temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }

    printf("Reversed string: %s\n", str);

    return 0;
}
