#include <stdio.h>

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", arr + i); // using pointer arithmetic
    }

    printf("Reversed array: ");
    for (int *p = arr + n - 1; p >= arr; p--) {
        printf("%d ", *p); // dereference pointer to print values
    }
    printf("\n");

    return 0;
}
