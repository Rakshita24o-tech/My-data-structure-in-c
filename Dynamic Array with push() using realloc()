#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int *data;      // pointer to the actual data
    int size;       // current number of elements
    int capacity;   // total allocated capacity
} DynamicArray;

// Function to initialize the dynamic array
void initArray(DynamicArray *arr) {
    arr->size = 0;
    arr->capacity = 2; // start small
    arr->data = (int *)malloc(arr->capacity * sizeof(int));
    if (arr->data == NULL) {
        printf("Memory allocation failed!\n");
        exit(1);
    }
}

// Function to push a new element into the array
void push(DynamicArray *arr, int value) {
    // If full, double capacity using realloc
    if (arr->size == arr->capacity) {
        arr->capacity *= 2;
        int *temp = (int *)realloc(arr->data, arr->capacity * sizeof(int));
        if (temp == NULL) {
            printf("Reallocation failed!\n");
            free(arr->data);
            exit(1);
        }
        arr->data = temp;
    }

    // Add the new element
    *(arr->data + arr->size) = value;
    arr->size++;
}

// Function to print the array
void printArray(const DynamicArray *arr) {
    printf("Array elements: ");
    for (int i = 0; i < arr->size; i++) {
        printf("%d ", *(arr->data + i));
    }
    printf("\n");
    printf("(size=%d, capacity=%d)\n", arr->size, arr->capacity);
}

// Function to free memory
void freeArray(DynamicArray *arr) {
    free(arr->data);
    arr->data = NULL;
    arr->size = 0;
    arr->capacity = 0;
}

int main() {
    DynamicArray arr;
    initArray(&arr);

    int n, value;
    printf("How many numbers to push? ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("Enter value %d: ", i + 1);
        scanf("%d", &value);
        push(&arr, value);
        printArray(&arr);
    }

    freeArray(&arr);
    return 0;
}
